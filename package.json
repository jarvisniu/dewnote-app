{
  "name": "Dewnote",
  "productName": "Dewnote",
  "version": "1.2.0",
  "description": "dewnote.com electron wrap",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "ELECTRON_MIRROR=http://npm.taobao.org/mirrors/electron/ electron-forge package",
    "make": "ELECTRON_MIRROR=http://npm.taobao.org/mirrors/electron/ electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "dewnote",
    "electron",
    "app"
  ],
  "author": {
    "name": "Jarvis Niu",
    "email": "jarvisniu@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "appname": "Dewnote",
        "icon": "./src/assets/logo"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Dewnote"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./src/assets/logo.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "15.2.0"
  }
}
